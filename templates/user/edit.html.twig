{% extends 'base.html.twig' %}

{% block body %}
<main class="container-main">
      <div class="row px-3 mt-2 fil-ariane">
        <p>
          <a href="{{ path('home')}}">Accueil</a> -
          <a href="{{ path('user_read', {'lastname' : app.user.lastname })}}">Mon espace personnel</a> - 
          <a href="{{ path('user_edit', {'lastname': app.user.lastname})}}">Modifier mon profil</a>
        </p>
      </div>
  <div class="row px-3 justify-content-center">
    {{ include('registration/_form.html.twig', {'button_label': 'Modifier'}) }}
  </div>
</main>

<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmModalLabel">Confirmation de suppression</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex align-items-center justify-content-center">
        <div><img src="{{ asset('assets/images/ModaleProfil.png') }}" width="80px" alt=""></div>
        <div class="ml-3">Êtes-vous sûr(e) de vouloir supprimer votre profil ?</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" data-dismiss="modal">Non</button>
        {{ form_start(deleteForm) }}
          {{ form_widget(deleteForm.deleteButton, {'attr': {'class': 'btn btn-danger'}, 'label': "Oui"}) }}
        {{ form_end(deleteForm) }}
      </div>
    </div>
  </div>
</div>

{% endblock %}