{% extends 'base.html.twig' %}

{% block title %}{{categorie.name}} | {{ societyName }}{% endblock %}


{% block body %}

<section class="card-sous-categorie">


<div id="page-container" class="et-animated-content" style="padding-top: 55px; overflow-y: hidden; margin-top: -155px;">
	<div id="et-main-area">
		<div id="main-content">
			<div class="entry-content">
				<div id="et-boc" class="et-boc">
					<div class="et_builder_inner_content et_pb_gutters3">
						<div class="et_pb_section et_pb_section_2 et_pb_with_background et_section_regular">
							<div class="et_pb_row et_pb_row_3 et_pb_row_fullwidth">
								<div class="et_pb_column et_pb_column_4_4 et_pb_column_3  et_pb_css_mix_blend_mode_passthrough et-last-child">
									<div class="et_pb_module et_pb_text et_pb_text_3 et_pb_bg_layout_dark  et_pb_text_align_left">
										<div class="et_pb_text_inner">
											<h1>{{categorie.name}}</h1>
										</div>
									</div>
								</div>
							</div>
	                    </div>
					</div>
				</div>
			</div>										
		</div>
	</div>
</div>
</section>
<main class="container">
      <div class="mt-2 fil-ariane">
        <p>
          <a href="{{ path('home')}}">Accueil</a> -
          <a href="{{ path('assurances_categorie', {'slug': categorie.slug})}}">{{categorie.name}}</a>
        </p>
      </div>
	
		<div class="container-cat-page">
	  	<div class="row justify-content-center">
		{% for sousCategories in categorie.sousCategories %}
		
		{% if sousCategories.name == 'Chien Chat' or sousCategories.name =='Habitation' or  sousCategories.name == 'Protection Juridique' or sousCategories.name == "Sant√©" %}
			{% for type in sousCategories.types %}
		<a href="{{ path('assurances_type', {'slug' : type.slug })}}"><img src="{{ asset('assets/images/photos/' ~ sousCategories.image)}}" alt="illustation cliquable {{sousCategories.name}}"></a>
        {% endfor %}
        {% else %}
         <a href="{{ path('assurances_sous-categorie', {'slug' : sousCategories.slug })}}"><img src="{{ asset('assets/images/photos/' ~ sousCategories.image)}}" alt="illustation cliquable {{sousCategories.name}}"></a>
        {% endif %}
		</div>
	</div>

	{% endfor %}

</main>

{% endblock %}


