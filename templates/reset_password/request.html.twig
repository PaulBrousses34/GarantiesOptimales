{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe | {{societyName}} {% endblock %}

{% block body %}


<main class="container">
<div class="error">
  {% for flashError in app.flashes('reset_password_error') %}
  <div class="alert alert-danger" role="alert">{{ flashError }}</div>
  {% endfor %}
</div>  
  {{ form_start(requestForm, {'attr': {'id': 'form'}}) }}
    <div class="row px-3 pt-3 main-title">
    <h2 class="title-register">Réinitialiser votre mot de passe</h2>
    </div>
    <div class="user-form-label">{{form_label (requestForm.email) }} <span class="form-asterisk-mandatory">*</span></div>
    <div>{{ form_help(requestForm.email) }}</div>
    <div>{{ form_widget(requestForm.email) }}</div>

    <div class="mt-3"><span class="form-asterisk-mandatory">*</span><span class="form-text-mandatory"> Champs obligatoires</span></div>

    <div class="submit-button-container mt-3">
      <button class="btn btn-lg form-btn-connexion">Valider</button>
    </div>
  {{ form_end(requestForm) }}
</main>
{% endblock %}