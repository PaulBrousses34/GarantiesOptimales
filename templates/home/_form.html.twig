{{ form_start(form, { 'attr': {'id': 'form' }}) }} 
    <div class="row px-3 pt-3 main-title justify-content-center">
      <h2 class= "title-register">Nous contacter</h2>
    </div>

    <div class="contact-form-label">{{form_label (form.email) }} <span class="form-asterisk-mandatory">*</span></div>
    <div>{{form_help (form.email) }}</div>

    {% if app.user.email is defined %}
    <div>{{form_widget (form.email, { 'attr': {'value': app.user.email }})}}</div>
    {% else %}
    <div>{{form_widget (form.email)}}</div>
    {% endif %}

    <div class="user-form-label">{{form_label (form.lastname) }} <span class="form-asterisk-mandatory">*</span></div>
    <div>{{form_help (form.lastname) }}</div>
    {% if app.user.lastname is defined %}
    <div>{{form_widget (form.lastname, { 'attr': {'value': app.user.lastname }}) }}</div>
    {% else %}
    <div>{{form_widget (form.lastname)}}</div>
    {% endif %}

    <div class="user-form-label">{{form_label (form.firstname) }} <span class="form-asterisk-mandatory">*</span></div>
    <div>{{form_help (form.firstname) }}</div>
    {% if app.user.firstname is defined %}
    <div>{{form_widget (form.firstname, { 'attr': {'value': app.user.firstname }}) }}</div>
    {% else %}
    <div>{{form_widget (form.firstname)}}</div>
    {% endif %}


    <div class="contact-form-label">{{form_label (form.subject) }} <span class="form-asterisk-mandatory">*</span></div>
    <div>{{form_help (form.subject) }}</div>
    <div>{{form_widget (form.subject) }}</div>


    <div class="contact-form-label">{{form_label (form.message) }} <span class="form-asterisk-mandatory">*</span></div>
    <div>{{form_help (form.message) }}</div>
    <div>{{form_widget (form.message) }}</div>

    <div class="contact-form-label">{{form_label (form.file) }}</div>
    <div>{{form_help (form.file) }}</div>
    <div>{{form_widget (form.file) }}</div>



    <div class="mt-3"><span class="form-asterisk-mandatory">*</span><span class="form-text-mandatory"> Champs obligatoires</span></div>
    <div class="submit-button-container">
        <button type="submit" class="btn form-btn">{{ button_label|default('Envoyer') }}</button>
    </div>
{{ form_end(form) }}