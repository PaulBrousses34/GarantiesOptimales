<div class="row justify-content-center">
    {% for particulier in particuliers %}
    {% for type in sousCategorie.types %}
    <div id="container">	
	    <div class="product-details">
	    <a href="{{ path('assurances_type_particuliers',  {'slug' : type.slug })}}">
        <h4 class="categorie-name-card">{{ type.name }}</h4>
		</a>
		<p class="information">{{ type.description }}</p>
        <a href="{{ path('assurances_type_particuliers',  {'slug' : type.slug })}}">Obtenir un devis</a>
        </div>
        <div class="product-image">
            <a href="{{ path('assurances_type_particuliers',  {'slug' : type.slug })}}">
