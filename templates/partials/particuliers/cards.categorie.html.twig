<div class="row justify-content-center">
    {% for particulier in particuliers %}
    {% for sousCategories in particulier.sousCategories %}
    <div id="container">	
	    <div class="product-details">
	            <a href="{{ path('assurances_sous-categorie_particuliers',  {'slug' : sousCategories.slug })}}">
                <h4 class="categorie-name-card">{{ sousCategories.name }}</h4>
		        </a>
		            <p class="information">"Nos assurances"</p>
        </div>
	
        <div class="product-image">
        {% if sousCategories.name == "2 roues & Quad" or sousCategories.name == "Plaisance" or sousCategories.name == "Sant√©" %}
                <img src="{{asset('assets/images/photos/' ~ sousCategories.image) }}" alt="photo lien {{ sousCategories.name }}">
            <div class="info">
                <ul>
                {% for type in sousCategories.types %}
                    <a href="{{ path('assurances_type_particuliers',  {'slug' : type.slug })}}"><li class="card-li"><strong>{{ type.name }}</strong></li></a>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>
        {% else %}
            <a href="{{ path('assurances_sous-categorie_particuliers',  {'slug' : sousCategories.slug })}}">
                    <img class="card-img-top" src="{{asset('assets/images/photos/' ~ sousCategories.image) }}" alt="photo lien {{ sousCategories.name }}">
                    </a>
                </div>
    </div>

        {% endif %}

                    {% endfor %}
                    {% endfor %}
</div>